{
  "compilerOptions": {
    "outDir": "out/tasks",
    "module": "ESNext",
    "types": ["node", "sharedworker"],
    "allowJs": false,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node",
    "isolatedModules": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2018"
  },
  "include": ["src"],
  "exclude": ["vite.config.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
